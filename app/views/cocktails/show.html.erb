<div class="cocktail-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1472245088132-ccd50746725c?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1949&q=80')">
  <h1><%=@cocktail.name %></h1><br>
</div>

<div class="container">
  <div class="m-3">
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> :  <%=dose.description%> <%= link_to "Remove", dose_path(dose),method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %> 
  </ul>


    <%= simple_form_for([@cocktail, @dose]) do |f| %>
    	<%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit class: 'btn-primary btn mx-auto d-block' %>
    <% end %>
    
    <%= link_to 'Back to menu', cocktails_path %>
  </div>

  
</div>
